<p id="notice"><%= notice %></p>
<body class ="bg-success">
<h1>Piłkarze</h1>

<table class="table table-striped bg-info">
  <thead>
    <tr>
      <th>Imię</th>
      <th>Nazwisko</th>
      <th>Bramki</th>
      <th>Wart[mln $]</th>
      <th>Klub</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.name %></td>
        <td><%= player.lastname %></td>
        <td><%= player.goals %></td>
        <td><%= player.worth %></td>
        <td><%= player.club.name %></td>
        <td><%= link_to 'Pokaż', player, class: 'btn btn-info' %></td>
        <td><%= link_to 'Edytuj', edit_player_path(player), class: "btn btn-info" %></td>
        <td><%= link_to 'Zniszcz', player, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-info" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Stwórz nowego piłkarza', new_player_path, class: "btn btn-info"  %>
</body>